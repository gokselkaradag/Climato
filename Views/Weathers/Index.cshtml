@{
    Layout = null;
}

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <title>Hava Durumu</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="icon" href="~/hava/img/sun.jpg" type="image/jpeg">

    <!-- Google Fonts - Roboto and Poppins -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="~/hava/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/hava/css/fontAwesome.css">
    <link rel="stylesheet" href="~/hava/css/hero-slider.css">
    <link rel="stylesheet" href="~/hava/css/templatemo-main.css">
    <link rel="stylesheet" href="~/hava/css/owl-carousel.css">

    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700,800" rel="stylesheet">

    <script src="~/hava/js/vendor/modernizr-2.8.3-respond-1.4.2.min.js"></script>

    <style>
        /* Genel yazı tipi ve metin stili */
        body {
            font-family: 'Poppins', sans-serif;
            color: #333;
        }

        h4 {
            font-family: 'Roboto', sans-serif;
            font-size: 24px;
            font-weight: 600;
            margin-bottom: 15px;
        }

        p {
            font-family: 'Poppins', sans-serif;
            font-size: 16px;
            font-weight: 400;
            line-height: 1.6;
        }

        .service-content {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh; /* Tüm ekranı kaplamak için */
        }

        .service-item {
            background-color: #f8f9fa;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            text-align: center;
            width: 100%;
            max-width: 400px; /* Kartın genişliğini sınırlıyoruz */
        }

        .line-dec {
            width: 50px;
            height: 3px;
            background-color: #f39c12;
            margin: 10px auto;
        }

        /* Primary button styling */
        .primary-button a {
            font-family: 'Roboto', sans-serif;
            font-weight: 500;
            font-size: 18px;
            color: #fff;
            background-color: #f39c12;
            padding: 10px 20px;
            border-radius: 5px;
            text-decoration: none;
            transition: background-color 0.3s;
        }

            .primary-button a:hover {
                background-color: #d35400;
            }
    </style>
</head>

